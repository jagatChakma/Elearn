<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ElearnShorbornomala">


    <LinearLayout

        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton"
                    android:background="@drawable/read1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton2"
                    android:background="@drawable/read2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button3"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton3"
                    android:background="@drawable/read3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button4"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton4"
                    android:background="@drawable/read4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:weightSum="3"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button5"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton5"
                    android:background="@drawable/read5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button6"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton6"
                    android:background="@drawable/read6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton7"
                    android:background="@drawable/read7"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />




            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton8"
                    android:background="@drawable/read8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton9"
                    android:background="@drawable/read9"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton10"
                    android:background="@drawable/read10"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />


                <Button
                    android:layout_weight="1"
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="didTapButton11"
                    android:background="@drawable/read11"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />




            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>